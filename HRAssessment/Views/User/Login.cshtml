@model Shared.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Sign in HR Assessment!</h1>
                            </div>
                            <form asp-controller="User" asp-action="Login" method="post" class="mt-3">
                                <div class="form-group">
                                    <input asp-for="UserName" class="form-control form-control-user" placeholder="First Name" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="Password" class="form-control form-control-user" placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary">Login</button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-controller="User" asp-action="Register">Create an Account!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

